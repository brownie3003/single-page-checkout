{{#if discount}}
    <div class="col-xs-6 no-padding">
        <strong>Discount</strong>
    </div>
    <div class="col-xs-6 text-right no-padding">
        {{moo-price finalPrice=discount}}
    </div>
{{else}}
    {{#if enteringPromo}}
        <form class="form-inline" {{action "applyDiscount" code on="submit"}}>
            <div class="form-group">
                {{input type="text" value=code class="form-control" placeholder="Enter promo code"}}
            </div>
            <button type="submit" class="btn btn-default">Apply</button>
            <a href="#" {{action 'toggleEnteringPromo'}}>Hide</a>
        </form>
    {{else}}
        <a href="#" {{action 'toggleEnteringPromo'}}>Enter a promo code</a>
    {{/if}}
{{/if}}

{{yield}}
