<div class="col-xs-12">
    <form class="form-group" {{action 'createUser' on="submit"}}>
        <div class="form-group">
            <label>First Name</label>
            {{validated-input type="text" value=user.firstName placeHolder="First Name" errors=user.errors.firstName}}
        </div>
        <div class="form-group">
            <label>Last Name</label>
            {{validated-input type="text" value=user.lastName placeHolder="Last Name" errors=user.errors.lastName}}
        </div>
        <div class="form-group">
            <label>Email</label>
            {{validated-input type="email" value=user.email placeHolder="Email" errors=user.errors.email}}
        </div>
        <div class="form-group">
            <label>Password</label>
            {{validated-input type="password" value=password placeHolder="Password" errors=errors.password}}
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            {{validated-input type="password" value=passwordConfirmation placeHolder="Repeat Password" errors=errors.passwordConfirmation}}
        </div>
        <button type="submit" class="btn btn-moo btn-block" disabled={{if (not signUpIsValid) 'true'}}>Sign up</button>
    </form>
</div>

{{yield}}
