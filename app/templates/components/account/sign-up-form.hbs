<div class="col-xs-12">
    <form class="form-group" {{action 'createUser' on="submit"}}>
        <div class="form-group">
            <label>First Name</label>
            {{validated-input type="text" value=firstName placeHolder="First Name"}}
        </div>
        <div class="form-group">
            <label>Last Name</label>
            {{validated-input type="text" value=lastName placeHolder="Last Name"}}
        </div>
        <div class="form-group">
            <label>Email</label>
            {{validated-input type="email" value=email placeHolder="Email"}}
        </div>
        <div class="form-group">
            <label>Password</label>
            {{validated-input type="password" placeHolder="Password"}}
        </div>
        <div class="form-group">
            <label>Repeat Password</label>
            {{validated-input type="password" placeHolder="Repeat Password"}}
        </div>
        <button type="submit" class="btn btn-moo btn-block">Sign up</button>
    </form>
</div>

{{yield}}
