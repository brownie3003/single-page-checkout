<div class="panel panel-default">
    <div class="panel-body">
        <h4>Shipping Options</h4>
        <p>
            Select your country to view shipping options.
        </p>
        <div class="row">
            <div class="col-xs-12">
                {{#x-select value=shippingCountry action="setShippingCountry" class="form-control"}}
                    {{#x-option value="UK"}}UK{{/x-option}}
                    {{#x-option value="USA"}}USA{{/x-option}}
                {{/x-select}}
            </div>
        </div>
        <div class="row">
            {{#if showAllDeliveryMethods}}
                {{#each deliveryMethods as |deliveryMethod|}}
                    {{delivery/delivery-method 
                        deliveryMethod=deliveryMethod 
                        selectedDeliveryMethod=selectedDeliveryMethod 
                        setDeliveryMethod="setDeliveryMethod"
                    }}
                {{/each}}
            {{else}}
                {{#each popularDeliveryMethods as |deliveryMethod|}}
                    {{delivery/delivery-method 
                        deliveryMethod=deliveryMethod 
                        selectedDeliveryMethod=selectedDeliveryMethod 
                        setDeliveryMethod="setDeliveryMethod"
                    }}
                {{/each}}
            {{/if}}
        </div>
        <div class="row">
            <div class="col-xs-12">
                {{#if (not showAllDeliveryMethods)}}
                    <button class="btn btn-default btn-block" {{action "toggleShowAllDeliveryMethods"}}>See More Options</button>
                {{/if}}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <button class="btn btn-default btn-block">Collect your order</button>
            </div>
        </div>
    </div>
</div>
