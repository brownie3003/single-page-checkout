<div class="panel panel-default">
    <div class="panel-body">
        <button type="button" name="button" class="btn btn-moo pull-right">
            <span class="glyphicon glyphicon-remove"></span>
        </button>
        <div class="row">
            <div class="col-md-4 col-xs-12 product-image vertical-align-middle">
                <img src="{{item.image}}" alt="" />
            </div>
            <div class="col-md-7 col-xs-12 vertical-align-middle">
                <h4>{{item.title}}</h4>
                <span>{{item.description}}</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-xs-12 vertical-align-middle">
                {{#x-select value= item.quantity class="form-control"}}
                    {{#each quantities as |quantity|}}
                        {{#x-option value=quantity}}
                            {{quantity}}
                        {{/x-option}}
                    {{/each}}
                {{/x-select}}
            </div>
            <div class="col-md-7 col-xs-12 vertical-align-middle">
                {{moo-price originalPrice=item.originalPrice finalPrice=item.finalPrice}}
            </div>
        </div>
    </div>
</div>
{{yield}}
