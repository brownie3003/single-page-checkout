{{#if showAllDeliveryOptions}}
    {{#each deliveryOptions as |deliveryOption|}}
        {{shipping-options/delivery-option 
            deliveryOption=deliveryOption
            selectedDeliveryOption=selectedDeliveryOption 
            setDeliveryOption=setDeliveryOption
        }}
    {{/each}}
{{else}}
    {{#each popularDeliveryOptions as |deliveryOption|}}
        {{shipping-options/delivery-option 
            deliveryOption=deliveryOption
            selectedDeliveryOption=selectedDeliveryOption 
            setShippingOption=setShippingOption
        }}
    {{/each}}
{{/if}}
<div class="row">
    <div class="col-xs-12">
        {{#if (not showAllDeliveryOptions)}}
            <a href="#" {{action "toggleShowAllDeliveryOptions" on="click"}}>See More Options</a>
        {{/if}}
    </div>
</div>
{{yield}}
