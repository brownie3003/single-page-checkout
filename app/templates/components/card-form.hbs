<div class="col-lg-12">
    <form class="form-horizontal">
        <div class="form-group">
            <label>Name</label>
                {{validated-input value=card.name type="text" placeHolder="Name on card*" errors=card.errors.name action="checkCardIsValid"}}
        </div>
        <div class="form-group">
            <label>Card number</label>
            {{validated-input value=card.cardNumber type="text" placeHolder="Card Number" errors=card.errors.cardNumber action="checkCardIsValid"}}
        </div>
        <div class="form-group">
            <label>Expiry Date (MM / YY)</label>
            <div class="row">
                <div class="col-xs-3">
                    {{validated-input value=expiryMonth type="text" placeHolder="MM" errors=card.errors.expiryDate}}
                </div>
                <div class="col-xs-3">
                    {{validated-input value=expiryYear type="text" placeHolder="YY" errors=card.errors.expiryDate action="checkCardIsValid"}}
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>CCV</label>
            <div class="row">
                <div class="col-xs-4">
                    {{validated-input value=ccv type="text" placeHolder="CCV"}}
                </div>
                
            </div>
        </div>
    </form>
</div>

{{yield}}
